            },
            "metadata": {
                "in": "./lib/schemas/Subscriptions_Delete.in.json",
                "out": {
                    "type": "object"
                }
            }
        },
        "Subscriptions_Get": {
            "main": "./lib/actions/Subscriptions_Get.js",
            "title": "Gets details about particular subscription.",
            "description": "Gets details about particular subscription.",
