                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/Subscriptions_Get.in.json",
                "out": {
                    "type": "object"
                }
